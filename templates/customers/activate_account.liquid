<div class="customer activate tex-center py-20 flex justify-center items-center">
  <div>
  {% comment %} <svg width="30" height="30" style="display: none" class="max-w-[30px]">
    <symbol id="icon-error" viewBox="0 0 13 13">
      <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
      <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
      <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
      <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
    </symbol>
  </svg> {% endcomment %}
  <h1 class="text-center mb-5 text-2xl">
    {{ 'customer.activate_account.title' | t }}
  </h1>
  <p class="text-sm mb-5 text-center">
    {{ 'customer.activate_account.subtext' | t }}
  </p>
  {%- form 'activate_customer_password' -%}
    {% comment %} {%- if form.errors -%}
      <h2 class="form__message text-xs text-red-400" tabindex="-1" autofocus>
         <svg width="30" height="30" aria-hidden="true" focusable="false" role="presentation">
          <use href="#icon-error" />
        </svg> 
        {{ 'templates.contact.form.error_heading' | t }}
      </h2>
      <ul>
        {%- for field in form.errors -%}
          <li class="text-xs text-red-400">
            {%- if field == 'form' -%}
              {{ form.errors.messages[field] }}
            {%- else -%}
              <a href="#{{ field }}" class="text-xs text-red-400">
                {{ form.errors.translated_fields[field] | capitalize }}
                {{ form.errors.messages[field] }}
              </a>
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%} 
  {% endcomment %}

    <div class="field mt-3"> 
      <label for="password" class="block relative text-[11px] leading-[15px] tracking-[0.02em] uppercase">
        {{ 'customer.activate_account.password' | t }}
      </label>    
      <input
        class="border-b border-acajou border-solid text-[17px] placeholder-chataigne placeholder-opacity-60 pr-4 py-1 leading-[22px] font-semibold appearance-none outline-none w-full bg-transparent"
        type="password"
        name="customer[password]"
        id="password"
        autocomplete="new-password"
        placeholder="{{ 'customer.activate_account.password' | t }}"
        {% if form.errors contains 'password' %}
          aria-invalid="true"
          aria-describedby="password-error"
        {% endif %}
      >
      
      {%- if form.errors contains 'password' -%}
        <small id="password-error" class="form__message text-xs text-red-400">
          {% comment %} <svg aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg> {% endcomment %}
          {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}
        </small>
      {%- endif -%}
    </div>

    <div class="field my-5">
      <label for="password_confirmation" class="block relative text-[11px] leading-[15px] tracking-[0.02em] uppercase">
        {{ 'customer.activate_account.password_confirm' | t }}
      </label>     
      <input
        class="border-b border-acajou border-solid text-[17px] placeholder-chataigne placeholder-opacity-60 pr-4 py-1 leading-[22px] font-semibold appearance-none outline-none w-full bg-transparent"
        type="password"
        name="customer[password_confirmation]"
        id="password_confirmation"
        autocomplete="new-password"
        placeholder="{{ 'customer.activate_account.password_confirm' | t }}"
        {% if form.errors contains 'password' %}
          aria-invalid="true"
          aria-describedby="password_confirmation-error"
        {% endif %}
      >
      
      {%- if form.errors contains 'password_confirmation' -%}
        <small id="password_confirmation-error" class="form__message text-xs text-red-400">
          {% comment %} <svg width="30" height="30" aria-hidden="true" focusable="false" role="presentation">
            <use href="#icon-error" />
          </svg> {% endcomment %}
          {{ form.errors.translated_fields['password_confirmation'] | capitalize }} {{ form.errors.messages['password_confirmation'] }}
        </small>
      {%- endif -%}
    </div>

    <button class="block mx-auto mt-8 border-acajou tracking-wider border mb-2 border-solid px-5 py-2 font-semibold text-base rounded-3xl bg-acajou hover:bg-transparent text-white hover:text-acajou cursor-pointer">
      {{ 'customer.activate_account.submit' | t }}
    </button>
    <button name="decline" class="block mx-auto tracking-wider px-5 underline font-semibold text-base text-acajou cursor-pointer">
      {{ 'customer.activate_account.cancel' | t }}
    </button>
  {%- endform -%}
  </div>
</div>
