<section class="pb-5 md:py-10">
  <div class="w-full max-w-[1200px] mx-auto">
    <div class="flex flex-col md:flex-row">
      <div class="w-full md:w-[339px] md:mr-10 flex flex-row gap-10">
        <div class="bg-sable pt-0 flex flex-col">
          <div class="py-16 px-14 text-center">
            <div class="rounded-full bg-acajou w-20 h-20 flex justify-center items-center ml-auto mr-auto mb-7 text-white">
              {{ customer.first_name | slice: 0 -}}
              {{- customer.last_name | slice: 0 }}
            </div>
            <h3 class="font-[RebondGrotesque] text-[17px] mb-11 font-semibold">{{ settings.welcome_text_1 }}</h3>
            <p class="text-[13px]">
              {{ settings.welcome_text_2 }}
            </p>
          </div>
          <div class="hidden md:flex flex-col mt-auto">
            <a href="https://lequipe-jolly-mama.gorgias.help/fr-FR" class="w-full cursor-pointer text-center border-y border-b-0 border-acajou font-semibold border-solid pt-4 pb-4">
              <span class="text-base block ml-2">{{ 'customer.account.need_help' | t }}</span>
            </a>
            <a href="{{ routes.account_logout_url }}" class="w-full cursor-pointer text-center font-semibold border-y border-b-0 border-acajou border-solid pt-4 pb-4">
              <span class="text-base block ml-2">{{ 'customer.account.logout' | t }}</span>
            </a>
          </div>
        </div>
      </div>
      <div class="mx-5 my-5 md:w-[821px] md:mx-0 md:my-0 grid grid-cols-1 md:grid-cols-2 md:grid-rows-3 gap-5">
        <a href="{{ routes.account_addresses_url }}" class="w-full h-full cursor-pointer relative">
          <img
            src="{{ settings.account_image_1 | image_url: width: 1800 }}"
            loading="eager"
            width="821"
            height="285"
            class="w-full h-full object-cover">
          <div class="absolute bottom-5 left-5">
            <h2 class="GroteskBold text-white text-[28px] leading-8 md:leading-10 md:text-[34px] font-extrabold uppercase tracking-wider">
              {{ 'customer.account.informations_title' | t }}
            </h2>
          </div>
        </a>

        <a href="{{ routes.account_url }}?orders=true" class="w-full h-full cursor-pointer relative">
          <img
            src="{{ settings.account_image_2 | image_url: width: 1800 }}"
            loading="eager"
            width="821"
            height="285"
            class="w-full h-full object-cover">
          <div class="absolute bottom-5 left-5">
            <h2 class="GroteskBold text-white text-[28px] leading-8 md:leading-10 md:text-[34px] font-extrabold uppercase tracking-wider">
              {{ 'customer.account.orders_title' | t }}
            </h2>
          </div>
        </a>

        {% liquid
          assign customer_sub = false
          assign customer_tags = customer.tags | split: ','
          for tag in customer_tags
            assign tag_f = tag | handle
            if tag_f == 'active-subscriber' or tag_f == 'inactive-subscriber' or tag_f == 'subscription-card-declined'
              assign customer_sub = true
              break
            endif
          endfor 
        %}
        {% if customer_sub %}
          <a href="/tools/recurring/login" class="w-full h-full cursor-pointer relative">
            <img
              src="{{ settings.account_image_6 | image_url: width: 1800 }}"
              loading="eager"
              width="821"
              height="285"
              class="w-full h-full object-cover">
            <div class="absolute bottom-5 left-5">
              <h2 class="GroteskBold text-white text-[28px] leading-8 md:leading-10 md:text-[34px] font-extrabold uppercase tracking-wider">
                {{ 'customer.account.subscription_title' | t }}
              </h2>
            </div>
          </a>
        {% endif %}

        <a href="/pages/fidelite" class="w-full h-full cursor-pointer relative">
          <img
            src="{{ settings.account_image_3 | image_url: width: 1800 }}"
            loading="eager"
            width="821"
            height="285"
            class="w-full h-full max-h-[85px] sm:max-h-[265px] object-cover">
          <div class="absolute bottom-8 sm:bottom-5 left-5">
            <h2 class="GroteskBold text-white text-[28px] leading-8 md:leading-10 md:text-[34px] font-extrabold uppercase tracking-wider">
              {{ 'customer.account.fidelite_title' | t }}
            </h2>
          </div>
        </a>
        <a href="/pages/parrainage" class="w-full h-full cursor-pointer relative">
          <img
            src="{{ settings.account_image_4 | image_url: width: 1800 }}"
            loading="eager"
            width="821"
            height="285"
            class="w-full h-full max-h-[85px] sm:max-h-[265px] object-cover">
          <div class="absolute bottom-8 sm:bottom-5 left-5">
            <h2 class="GroteskBold text-white text-[28px] leading-8 md:leading-10 md:text-[34px] font-extrabold uppercase tracking-wider">
              {{ 'customer.account.parrainage_title' | t }}
            </h2>
          </div>
        </a>
        <a href="/pages/diagnostic-account" class="w-full h-full cursor-pointer relative">
          <img
            src="{{ settings.account_image_5 | image_url: width: 1800 }}"
            loading="eager"
            width="821"
            height="285"
            class="w-full h-full max-h-[85px] sm:max-h-[265px] object-cover">
          <div class="absolute bottom-8 sm:bottom-5 left-5">
            <h2 class="GroteskBold text-white text-[28px] leading-8 md:leading-10 md:text-[34px] font-extrabold uppercase tracking-wider">
              {{ 'customer.account.diagnostic_title' | t }}
            </h2>
          </div>
        </a>
      </div>
      <div class="flex w-full md:hidden flex-col mt-auto bg-sable">
        <a href="https://help.jollymama.com" class="w-full cursor-pointer text-center leading-10 md:border-y border-b-0 border-acajou font-semibold border-solid pt-4 pb-4">
          <span class="text-base block ml-2">{{ 'customer.account.need_help' | t }}</span>
        </a>
        <a href="{{ routes.account_logout_url }}" class="w-full cursor-pointer text-center font-semibold border-y border-b-0 border-acajou border-solid pt-4 pb-4">
          <span class="text-base block ml-2">{{ 'customer.account.logout' | t }}</span>
        </a>
      </div>
    </div>
  </div>
</section>
