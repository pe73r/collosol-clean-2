<section>
    <div class="w-full py-10" style="background-color: {{section.settings.bg-color}} ">
          <div class="flex relative overflow-hidden overflow-x-scroll snap-mandatory snap-x sm:ml-0">
            {%- for block in section.blocks -%}
                {%- if block.settings.image-product != blank -%}
                  <div class="snap-center mx-[5px] md:mx-[3px]">
                    {% render "image" image: block.settings.image-product, class:"lazy max-h-[100px] max-w-[100px] rounded-[4px] object-cover aspect-square  md:max-h-[120px] md:max-w-[120px]" %}
                  </div>
                {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                 {% endif %}
            {%- endfor-%}
          </div>
        <a href="#" class="block cursor-pointer underline text-sm font-bold mt-[10px] text-center" style="color:{{ section.settings.link-color }} "> {{ section.settings.link }} </a>
      </div>
    </div>
</section>


{% schema %}
{
  "name": "Banner carousel",
  "max_blocks": 12,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
    {
      "type": "text",
      "id": "link",
      "default": "Voir toute la gamme",
      "label": "Button"
    },
    {
    "type": "header",
    "content": "colors"
    },
    {
    "type": "color",
    "id": "bg-color",
    "label": "Background color",
    "default": "#E8E2DB"
    },
    {
    "type": "color",
    "id": "subtitle-color",
    "label": "Subtitle color",
    "default": "#FFFFFF"
    },
    {
     "type": "color",
     "id": "header-color",
     "label": "Header color",
     "default": "#FFFFFF"
    }
  ],
	"blocks": [
     {
       "name": "Block",
       "type": "block",
       "settings": [
         {
           "type": "image_picker",
           "id": "image-product",
           "label": "Images produit"
         },
         {
           "type": "text",
           "id": "text",
           "label": "Category name"
         }
       ]
     }
   ],
   "presets": [
    {
      "name": "Carousel header",
      "blocks": [
        {
          "type": "block"
        },
        {
          "type": "block"
        },
        {
          "type": "block"
        }
      ]
    }
  ]
}

{% endschema %}
