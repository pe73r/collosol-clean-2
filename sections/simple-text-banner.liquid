<section class="py-5">
  <div class="w-11/12 mx-auto p-5 border-b border-gray-medium" style="background-color:{{ section.settings.background_color }} ;">
    <div class="flex flex-col justify-center gap-4 items-center">
      {% render 'breadcrumbs' %}
      <div class="text-base text-center md:text-[32px] uppercase GroteskBold" style="color:{{ section.settings.header_color }};">
        {{ section.settings.header }}
      </div>
      <div class="text-sm text-center px-3 md:px-14" style="color:{{ section.settings.subheader_color }};">
        {{ section.settings.subheader }}
      </div>
    </div>
  </div>
</section>


{% schema %}

  {
    "name": "Simple text",
    "settings": [
      {
        "type": "text",
        "id": "header",
        "label": "Header",
        "default": "L'abonnement pratIque ET SANS ENGAGEMENT"
      },
      {
        "type": "text",
        "id": "subheader",
        "label": "Subheader",
        "default": "Proditez de réduction et d'avantages exclusifs grâce à l'abonnement Jolly Mama. Choissisez les produits et la fréquence de l'abonnement."
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "header_color",
        "label": "Header color",
        "default": "#733E2B"
      }, {
        "type": "color",
        "id": "subheader_color",
        "label": "Text color",
        "default": "#927254"
      }, {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#F9F8F6"
      }
    ],
    "presets": [
      {
        "name": "Simple text"
      }
    ]
  }
{% endschema %}
