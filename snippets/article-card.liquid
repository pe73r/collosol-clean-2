 <a  href="{{ article.url }}" class="flex flex-col items-start justify-center gap-2">
    <img class="h-[200px] w-full aspect-square rounded-[4px] object-cover" src="{{ article.image.src | image_url }}" alt="{{ article.image.src.alt }}">
    <div class="mt-3">
      <h3 class="text-xs font-extrabold uppercase">
        {{ article.title | truncate: 50 | escape }}
      </h3>

      {%- if show_date -%}
        <p class="mt-1 text-xs">
          {{ article.published_at | date: "%a, %b %d, %y" }}
        </p>
      {%- endif -%}

      {%- if show_author -%}
        <span class="block mt-1 text-xs capitalize ">{{ article.author }}
        </span>
      {%- endif -%}

      {%- if show_button -%}
        <a href="{{ article.url }}" class="block mt-3 underline text-sm font-bold text-ecorce GrotesqueBold">
          {{ 'blogs.article.read_more' | t }}
        </a>
      {% endif %}
    </div>
</a>
