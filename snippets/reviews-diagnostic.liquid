<section class="pt-16 w-full max-w-full">
  <div class="w-11/12 md:w-[100%] mx-auto">
    <div class="flex flex-col gap-2 sm:gap-4">
      <h3 class="text-base md:text-[34px] md:leading-10 GroteskBold text-center mb-2 md:mb-8 max-w-full" style="color: {{ data.reviews_header_color }};">
        {{ data.reviews_title }}
      </h3>
      {% for i in (1..3) %}
        {% capture stars_key %}review_{{ i }}_stars{% endcapture %}
        {% capture text_key %}review_{{ i }}_text{% endcapture %}
        {% capture owner_key %}review_{{ i }}_owner{% endcapture %}
        {% assign stars = data[stars_key] %}
        {% assign text = data[text_key] %}
        {% assign owner = data[owner_key] %}

        {% if stars != blank and text != blank and owner != blank %}
          <div class="flex flex-col justify-center items-center mb-6">
            <div class="flex flex-col justify-center items-center w-[343px]  gap-4 p-8 max-w-full mx-auto rounded-md sm:w-[600px]" style="background-color: {{ data.background_review_card }};">
              {% assign stars_no_active = 5 | minus: stars %}
              <div class="flex justify-center">
                {% for star in (1..stars) %}
                  {% render 'icon-review-star' star_active: true %}
                {% endfor %}
                {% for star in (1..stars_no_active) %}
                  {% render 'icon-review-star' star_active: false %}
                {% endfor %}
              </div>

              <div class="text-base text-center" style="color: {{ data.reviews_text_color }}">
                {{ text }}
              </div>
              <div class="text-[13px] text-center" style="color: {{ data.reviews_text_color }}">
                {{ owner }}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

</section>