:root {
    --theme-prima-background-color: #f5f5f5;
    --theme-prima-text-color: rgb(146, 114, 84);
    --theme-prima-card-color: #fff;
    --theme-prima-button-primary: #3a0f00;
    --theme-prima-button-secondary: #3a0f00;
    --theme-prima-text-size: 14px;
    --theme-prima-text-line-height: 17px;
    --theme-prima-text-size-small: 11px;
    --theme-prima-text-line-height-small: 14px;
    --theme-prima-font-family: "RebondGrotesque", sans-serif;
    --theme-prima-color-white: #fff;
    --theme-prima-color-middle-grey: rgb(146, 114, 84);
    --theme-prima-color-light-grey: rgb(146, 114, 84);
    --theme-prima-color-red: #ec3d10;
    --theme-prima-header-height: 56px;
    --theme-prima-footer-height: 94px;
    --theme-prima-navigation-height: 40px;
    --rc-breadcrumb-color: var(--theme-prima-color-middle-grey);
    --rc-breadcrumb-active-color: var(--theme-prima-text-color);
    --rc-checkbox-check-color: var(--theme-prima-color-white);
    --rc-checkbox-background: var(--theme-prima-color-white);
    --rc-checkbox-active-background: var(--rc-primary-color);
    --rc-checkbox-border: var(--rc-primary-color);
}

.recharge-te .rct_home__section {
    margin-top: 2rem
}

.recharge-te .rct_home__section h3 {
    margin-bottom: 1rem;
}

.recharge-te .rct_subscription__info_price,
.recharge-te .rct_order__total {
    color: rgb(115, 62, 43);
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-family: "RebondGrotesqueBold";
    font-weight: 800;
}

.rct_sidebar .rct_home__section--top-title,
.recharge-te .rct_home__section--top-title,
.recharge-te .rct_content-header__title {
    text-transform: uppercase;
    font-weight: 800;
    font-family: 'GroteskBold';
}

.recharge-te h1, .recharge-te h2, .recharge-te h3, .recharge-te h4, .recharge-te h5, .recharge-te strong {
    color: #3a0f00;
    font-weight: 800;
}

.recharge-te .rct_navigation__item__link {
    text-transform: uppercase;
    color: rgb(146, 114, 84);
}

.recharge-te .rct_navigation__item__link--active {
    text-transform: uppercase;
    color: rgb(115, 62, 43);
}

.rct_sidebar .rct_card__label,
.rct_sidebar .rc-subheading,
.recharge-te .rct_card__label,
.recharge-te .rc-subheading {
    color: rgb(146, 114, 84) !important;
    font-weight: 800;
    text-transform: uppercase;
    font-family: 'GroteskBold' !important;
}

.rct_text--small,
.rct_card__content,
.rct_delivery-schedule__address-group__title {
    color: rgb(146, 114, 84) !important;
}

.recharge-te .rct_delivery-order {
    justify-content: flex-start;
}

.rct_chip {
    background-color: #3a0f00;
    color: white
}

.rct_sidebar .rct_button--secondary,
.rct_sidebar .rct_button--primary,
.recharge-te .rct_button--secondary,
.recharge-te .rct_button--primary,
.recharge-te .rc-btn {
    color: white;
    background-color: #3a0f00;
    border-radius: 9999px;
    font-size: 0.875rem;
    line-height: 1.25rem;
    padding-inline: var(--rc-spacing-5) !important;
    transition-timing-function: cubic-bezier(.75,0,.175,1)!important;
    transition-duration: .2s!important;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    line-height: 1;
}


.rct_sidebar .rct_button--secondary:hover,
.rct_sidebar .rct_button--primary:hover,
.recharge-te .rct_button--secondary:hover,
.recharge-te .rct_button--primary:hover,
.recharge-te .rc-btn:hover {
    color: white !important;
    background-color: #3a0f00 !important;
}

.rc_popup__block__footer,
.rc_popup__learn_more {
    display: none !important
}

.rc_popup__block__content {
    padding-bottom: 0 !important
}

.recharge-te .delivery-order-container > .d-flex {
    flex-direction: row !important;
    align-items: center;
    gap: 1rem;
    justify-content: center;
}

.recharge-te .delivery-order-container > .d-flex > * {
    margin-top: 0
}


.rct_sidebar__instance .rct_sidebar__content {
    color: rgb(146, 114, 84);
}

.rct_sidebar__instance  .rct_order-details__row__left__description > strong:first-child,
.rct_order-details__row__left > span:first-child {
    color: rgb(146, 114, 84) !important;
    font-weight: 800;
    text-transform: uppercase;
    font-family: 'GroteskBold' !important;
}